<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:outlineAmbientShadowColor="#1874ec"
        android:orientation="vertical">
        <TextView
            android:id="@+id/TxtRequestTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Member requests"
            android:gravity="center"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:textColor="#2165ed"
            android:background="#cecacb"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:outlineSpotShadowColor="#2c5261">

            <ListView
                android:id="@+id/listViewUserRequests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            </ListView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>