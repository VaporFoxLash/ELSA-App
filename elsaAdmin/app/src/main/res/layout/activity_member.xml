<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemberActivity"
    android:background="@drawable/backgall">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextTitle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:hint="  Title"
                android:textAlignment="inherit"
                android:textColorHint="#ffffff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextSurname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:hint="   Surname"
                android:textAlignment="inherit"
                android:textColorHint="#ffffff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editFullNames"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimaryDark"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:hint="   Full names"
                android:textAlignment="inherit"
                android:textColorHint="#ffffff"
                android:textSize="20dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorPrimaryDark">

                <Spinner
                    android:id="@+id/spinnerIncidentType"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="1"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:popupBackground="@color/colorPrimaryDark"
                    android:text="League"
                    android:autofillHints="Region"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="League"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="18dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="73dp"
                        android:layout_height="wrap_content"
                        android:text="PML"
                        android:textColor="#ffffff"/>

                    <CheckBox
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:text="PWL"
                        android:textColor="#ffffff"/>

                    <CheckBox
                        android:layout_width="73dp"
                        android:layout_height="wrap_content"
                        android:text="YAL"
                        android:textColor="#ffffff"/>

                    <CheckBox
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="ELCSAMO"
                        android:textColor="#ffffff"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <CheckBox
                        android:layout_width="73dp"
                        android:layout_height="wrap_content"
                        android:text="AM"
                        android:textColor="#ffffff"/>

                    <CheckBox
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:text="AW"
                        android:textColor="#ffffff"/>

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="YAL"
                        android:textColor="#ffffff"/>

                </LinearLayout>

            </LinearLayout>


            <EditText
                android:id="@+id/editTextIDNumber"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:hint="   ID/Passport no."
                android:textAlignment="inherit"
                android:textColorHint="#ffffff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextCellNo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:hint="   Cellphone no."
                android:textAlignment="inherit"
                android:textColorHint="#ffffff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextTelNo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:hint="   Telephone no."
                android:textAlignment="inherit"
                android:textColorHint="#ffffff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextPAddress"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:hint="   Physical/ Postal Address"
                android:textAlignment="inherit"
                android:textColorHint="#ffffff"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonChoose"
                    android:layout_width="268dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#0b61c2"
                    android:text="ID/Passport" />

                <Button
                    android:id="@+id/buttonUpload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#0b61c2"
                    android:text="Upload" />

            </LinearLayout>

            <TextView
                android:id="@+id/notification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/linearLayout"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="13dp"
                android:textAlignment="center"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/buttonAddUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:background="#363635"
                android:text="Save Information"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>